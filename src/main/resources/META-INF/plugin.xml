<idea-plugin>
    <id>com.main.Definitions</id>
    <name>Definitions</name>
    <vendor email="ballen@vertafore.com" url="http://www.jetbrains.com">Vertafore</vendor>

    <description><![CDATA[
    This plugin is designed to gather definitions from various sources.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes>
        change notes
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>

    </application-components>

    <project-components>

    </project-components>

    <actions>
        <action id="generateDialog" class="com.components.actions.PopUpAction" text="Get Definition" description="yo yo yo">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="DefinitionsToolMenu" class="com.components.actions.ToolsMenuAction" text="Definitions Plugin"
                description="This action allows the user to toggle the definitions they want. Defaults to Java on and all others off.">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij"></extensions>
</idea-plugin>